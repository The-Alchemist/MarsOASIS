#!/usr/bin/env python

# need this to post to database
import firebase
	
# import sensors by category
from one_wire import temperature

# declare sensor
sensor = temperature('28-00000673a8a7')

# take reading
reading = sensor.read()

# write to temporary file for API
with sense as open('/tmp/S103'): sense.write(reading)

# post to databases
result = firebase.post('/data', reading)
