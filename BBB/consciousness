#!/usr/bin/env python

# make sure you run this with root privileges already established
# otherwise prompts for your password will constantly be written and the system will crash from a memory overload
# a hacky way to do it is to type "sudo ls"

# need this for command line
import os

# initialize error logs
if not os.path.isdir("/tmp/errorlogs/"): os.mkdir("/tmp/errorlogs/")

# wake up
os.system("sudo nohup /home/atecce/MarsOASIS/BBB/focus > /tmp/errorlogs/general 2>&1 &")
